<div class="container">
  <div class="row">


    <div class="col-10 mt-5 ">
      <div class="row">
        <h4>商品一覧(全<%= @items.count %>件)</h4>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col">
            <table>
              <tr>
                <th>
                  <%= link_to item_path(item.id) do %>
                    <% if item.image.attached? %>
                      <%= image_tag item.image, size: "180x130" %>
                    <% else %>
                      <%= image_tag 'no_image.jpeg', size: "180x130" %>
                    <% end %>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th>
                  <%= item.name %>
                </th>
              </tr>
              <tr>
                <th>
                  <%= item.price.to_s(:delimited) %>円
                </th>
              </tr>
            </table>
          </div>
        <% end %>
      </div>
  <div class="mt-5"><%= paginate @items %></div>
  </div>
</div>