 <div class="container">
    <div class="row mt-5">
      <div class="col-4">
        <%= image_tag @item.image %>
      </div>
      <div class="col-8">
        <div class="row mb-3"><%= @item.name %></div>
        <div class="row mb-3"><%= @item.introduction %></div>
        <div class="row mb-3">¥<%= @item.price %>（税込）</div>
        <div class="row">
          <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <div class="row">
            <%= f.select :amount, *[1..5] , include_blank: "個数選択" %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.submit 'カートに入れる', class:"btn btn-success ml-3" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>