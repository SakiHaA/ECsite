<div class ="container">
  <div class ="col-md-3">
    <h4 class ="bg-light ml-5">配送先編集</h4>
  </div>
  <div class ="row mt-4">
    <div class ="col-md-10">
      <table class ="table table-borderless">
<%= form_with model: @address do |f| %>
  <table>
 <tr>
 	<td>郵便番号</td>
	<td><%= f.number_field :postal_code %></td>
 </tr>

 <tr>
 	<td>住所</td>
	<td><%= f.text_field :address %></td>
 </tr>

 <tr>
 	<td>宛名</td>
	<td><%= f.text_field :name %></td>
	<td></td>
	<td><%= f.submit '変更内容を保存',class: "btn btn-success" %></td>
 </tr>
  <% end %>
  </table>
    </div>
  </div>
</div>



