<div class="container">
  <div class="row">
    <h3><span class="bg-light px-4">会員情報編集</span></h3>
  </div>
<%= form_with model: @customer do |f| %>

<h4>氏名</h4>
<%= f.text_field :last_name %><%= f.text_field :first_name %>

<h4>フリガナ</h4>
<%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>

<h4>郵便番号</h4>
<%= f.number_field :postal_code %>

<h4>住所</h4>
<%= f.text_field :address %>

<h4>電話番号</h4>
<%= f.number_field :telephone_number %>

<%= f.submit '編集内容を保存' ,class: "btn btn-success" %>


<% end %>

<%= link_to '退会する', pre_out_customers_path, class: "btn btn-sm btn-danger" %>
